                "children": 
                [{ 
                    "caption": "-" 
                },{
                    "caption": "Commit Scope",
                    "mnemonic": "s",
                    "children": 
                    [
                        {
                            "command": "svn_set_scope", "args": {"scope": "repo"}, "caption": "Repository", "checkbox": "true"
                        },{
                            "command": "svn_set_scope", "args": {"scope": "file"}, "caption": "File", "checkbox": "true"
